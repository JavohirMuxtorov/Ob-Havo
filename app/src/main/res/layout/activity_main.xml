<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main_screen_content_background"
    android:padding="@dimen/main_screen_content_padding"
    tools:context=".MainActivity">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/car_view_corner_radius"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/car_view_marginStartEnd"
                    android:layout_marginEnd="@dimen/car_view_marginStartEnd"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/car_view_corner_radius"
                    app:cardElevation="@dimen/car_view_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/car_view_content_padding">
                        <ImageView
                            android:id="@+id/iv_main"
                            android:layout_width="@dimen/indentification_image_size"
                            android:layout_height="@dimen/indentification_image_size"
                            android:layout_marginEnd="@dimen/indentification_image_marginEnd"
                            android:src="@drawable/snowflake"
                            android:contentDescription="@string/image_contentDescription"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_main"
                                android:gravity="end"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/label_text_size"
                                android:textStyle="bold"
                                android:text="Weather"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_main_description"
                                android:gravity="end"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/value_text_size"
                                android:text="condition"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/car_view_marginStartEnd"
                    android:layout_marginEnd="@dimen/car_view_marginStartEnd"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/car_view_corner_radius"
                    app:cardElevation="@dimen/car_view_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/car_view_content_padding">
                        <ImageView
                            android:layout_width="@dimen/indentification_image_size"
                            android:layout_height="@dimen/indentification_image_size"
                            android:layout_marginEnd="@dimen/indentification_image_marginEnd"
                            android:src="@drawable/humidity"
                            android:contentDescription="@string/image_contentDescription"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_temp"
                                android:gravity="end"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/label_text_size"
                                android:textStyle="bold"
                                android:text="Degree"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_humidity"
                                android:gravity="end"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/value_text_size"
                                android:text="per cent"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/car_view_corner_radius"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/car_view_marginStartEnd"
                    android:layout_marginEnd="@dimen/car_view_marginStartEnd"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/car_view_corner_radius"
                    app:cardElevation="@dimen/car_view_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/car_view_content_padding">
                        <ImageView
                            android:id="@+id/iv_main3"
                            android:layout_width="@dimen/indentification_image_size"
                            android:layout_height="@dimen/indentification_image_size"
                            android:layout_marginEnd="@dimen/indentification_image_marginEnd"
                            android:src="@drawable/temperature"
                            android:contentDescription="@string/image_contentDescription"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_min"
                                android:gravity="end"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/label_text_size"
                                android:textStyle="bold"
                                android:text="Minimum"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_max"
                                android:gravity="end"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/value_text_size"
                                android:text="Maximum"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/car_view_marginStartEnd"
                    android:layout_marginEnd="@dimen/car_view_marginStartEnd"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/car_view_corner_radius"
                    app:cardElevation="@dimen/car_view_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/car_view_content_padding">

                        <ImageView
                            android:id="@+id/iv_main4"
                            android:layout_width="44dp"
                            android:layout_height="@dimen/indentification_image_size"
                            android:layout_marginEnd="@dimen/indentification_image_marginEnd"
                            android:contentDescription="@string/image_contentDescription"
                            android:src="@drawable/wind" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_speed"
                                android:gravity="end"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/label_text_size"
                                android:textStyle="bold"
                                android:text="Wind"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_main_description4"
                                android:gravity="end"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/value_text_size"
                                android:text="@string/miles_per_hour"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/car_view_marginStartEnd"
                android:layout_marginEnd="@dimen/car_view_marginStartEnd"
                android:layout_marginTop="@dimen/car_view_marginTop"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/car_view_corner_radius"
                app:cardElevation="@dimen/car_view_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/car_view_content_padding">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_location"
                            android:layout_width="@dimen/indentification_image_size"
                            android:layout_height="@dimen/indentification_image_size"
                            android:layout_marginEnd="@dimen/indentification_image_marginEnd"
                            android:contentDescription="@string/image_contentDescription"
                            android:src="@drawable/location"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textColor="@color/primary_text_color"
                                android:textSize="@dimen/label_text_size"
                                android:textStyle="bold"
                                android:text="Name"/>
                            <TextView
                                android:id="@+id/tv_country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/value_text_size"
                                android:text="country"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="310dp"
                        android:layout_height="1px"
                        android:background="@color/divider_background"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/car_view_marginTop"
                        android:layout_marginBottom="@dimen/car_view_marginTop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginRight="8dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/indentification_image_size"
                                android:layout_height="@dimen/indentification_image_size"
                                android:layout_gravity="end"
                                android:contentDescription="@string/image_contentDescription"
                                android:src="@drawable/sunrise"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_sunrise"
                                android:gravity="end"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/value_text_size"
                                android:text="sunrise"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_marginLeft="8dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/indentification_image_size"
                                android:layout_height="@dimen/indentification_image_size"
                                android:layout_gravity="start"
                                android:contentDescription="@string/image_contentDescription"
                                android:src="@drawable/sunset"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_sunset"
                                android:gravity="start"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/value_text_size"
                                android:text="sunset"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>